<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MapSched.AppShell"
       Shell.TabBarTitleColor="White"
       Shell.TabBarUnselectedColor="Gray"
       xmlns:views="clr-namespace:MapSched.views" BackgroundColor="#282828">
    
    <TabBar Route="main">
        
        <ShellContent
            Title="Расписание"
            Icon="icon_schedule_white.png"
            ContentTemplate="{DataTemplate views:Schedule}"
            Route="SchedulePage">
        </ShellContent>

        <ShellContent
            Title="Карта"
            Icon="icon_map_white.png"
            ContentTemplate="{DataTemplate views:Map_PAGE}"
            Route="MapPage">
        </ShellContent>
    </TabBar>
</Shell>