<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MapSched.AppShell"
       xmlns:views="clr-namespace:MapSched.views">

    <TabBar Route="main">
        <ShellContent
            Title="Schedule"
            Icon="icon_schedule.png"
            ContentTemplate="{DataTemplate views:Schedule}"
            Route="SchedulePage">
        </ShellContent>

        <ShellContent
            Title="Map"
            Icon="icon_map.png"
            ContentTemplate="{DataTemplate views:Map}"
            Route="MapPage">
        </ShellContent>
    </TabBar>
</Shell>